
@model Product

<div class="card" style="width: 18rem;">
    <img src="@Model.Image" asp-append-version="true" class="card-img-top" alt="images">
    <div class="card-body">
        <h5 class="card-title">@Model.ProductName</h5>
        <p class="card-text">@Model.ProductDescription</p>
        <p class="card-text">@Model.Price</p>
        <a href="#" class="btn btn-primary">View Product</a>
    </div>
</div>